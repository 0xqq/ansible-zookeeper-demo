[Unit]
Description=ZooKeeper Service
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]
Type=forking
User=zookeeper
Group=zookeeper
ExecStart={{ zookeeper.run_dir }}/bin/zkServer.sh start
ExecStop={{ zookeeper.run_dir }}/bin/zkServer.sh stop
ExecReload={{ zookeeper.run_dir }}/bin/zkServer.sh restart
WorkingDirectory={{ zookeeper.data_dir }}

[Install]
WantedBy=default.target
